<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#357d78"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Λυπάμαι δεν πέρασες το επίπεδο"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_weight="0.15"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ΣΩΣΤΕΣ ΑΠΑΝΤΗΣΕΙΣ "
            android:id="@+id/txtCorrectAnswers"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.69" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0.18">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ΕΠΑΝΑΛΗΨΗ"
                android:id="@+id/btnRestartLevel"
                android:layout_weight="0.15"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="48dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ΜΕΝΟΥ"
                android:id="@+id/btnMenuLost"
                android:layout_weight="0.15"
                android:layout_alignTop="@+id/btnRestartLevel"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
